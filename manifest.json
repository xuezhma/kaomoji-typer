{
  "manifest_version": 2,

  "name": "Kaomoji-Typer",
  "description": "A kaomoji input that suggests kaomojis to you based on what you are typing",
  "version": "1.0.0",
  "icons": {
      "16": "images/icon.png",
      "48": "images/icon.png",
      "128": "images/icon.png"
  },

  "content_scripts": [
      {
          "matches": ["https://*/*"],
          "js": ["js/kaomoji-collection.js", "js/suggestion-algorithm.js", "js/dom-manipulation.js", "js/index.js"],
          "css": ["css/index.css"]
      }

  ],
  "author": "Xuezheng Ma",
  "browser_action": {
    "default_icon": "images/icon.png",
    "default_title": "Kaomoji Typer"
  },

  "permissions": [
    "https://*/*"
  ]
}
